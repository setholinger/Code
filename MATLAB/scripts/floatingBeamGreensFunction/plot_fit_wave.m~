function plot_fit_wave(t,eventAlign,sigma,L_fit,M_frac_fit,G_0,xFit,numIt,xStep,p)

% plot resulting waveform and starting waveform
plot(t,G_0);
hold on;
plot(t,eventAlign);
title("Data and Starting Waveform")
xlabel("Time (s)")
ylabel("Normalized Velocity")
[k,mk] = max(G_0);            
text(mk*4/3,k/1.5,string("Best-fit parameters" + newline + "----------------------------" + ...
                        newline + "h_i: " + xFit(1) + " m     h_w: " ...
                        + xFit(2) + " m" + newline + "X_{stat}: " + ...
                        xFit(3)/1000 + " km" + "     t_0: " + xFit(4) + ...
                        newline + "M/M_0: " + M_frac_fit))
text(mk*4/3,k/3,string("MCMC parameters" + newline + "----------------------------" + ...                            
                       "h_i step: " + xStep(1) + " m    h_w step: " + xStep(2) + " m" + newline + ...
                       "X_stat step: " + xStep(3) + " m    t_0 step: " + xStep(4) + " s" + newline + ...
                       "Number of iterations: " + numIt + newline + "Sigma: " + sigma + newline + ...
                       "L_{fit}: " + L_fit + newline + "Accepted " + +))                   
l = legend("MCMC starting model","Data");
set(l,'Location','southwest');
set(gcf,'Position',[10 10 1000 800])
hold off
saveas(gcf,"/home/setholinger/Documents/Projects/PIG/modeling/mcmc/MCMC_run_" + p + "_start_wave.png")
close(gcf)

end